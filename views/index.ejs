<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="/css/style.css">
  <title>Registered Volunteers</title>
</head>
<body>
  <header>
    <h1>Volunteer Registration System</h1>
    <nav>
      <a href="/">Home</a>
      <a href="/register">Register New Volunteer</a>
    </nav>
  </header>
  <main>
    <h2>Registered Volunteers</h2>
    <table>
      <thead>
        <tr>
          <th>Name</th>
          <th>Email</th>
          <th>Phone</th>
          <th>Skills</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% volunteers.forEach(function(volunteer) { %>
          <tr>
            <td><%= volunteer.name %></td>
            <td><%= volunteer.email %></td>
            <td><%= volunteer.phone %></td>
            <td><%= volunteer.skills %></td>
            <td>
              <a href="/edit/<%= volunteer.id %>">Edit</a>
              <a href="/delete/<%= volunteer.id %>">Delete</a>
            </td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  </main>
</body>
</html>
